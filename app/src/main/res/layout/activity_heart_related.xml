<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5fdff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="10">



        <Space
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="5">

        </Space>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/logo">


        </ImageView>


    </LinearLayout>
    <androidx.legacy.widget.Space
        android:layout_width="100dp"
        android:layout_height="100dp">

    </androidx.legacy.widget.Space>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Polar Sensor Registration"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:fontFamily="casual">


        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <androidx.legacy.widget.Space
            android:layout_width="143dp"
            android:layout_height="wrap_content">

        </androidx.legacy.widget.Space>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="DEVICE ID:"
            android:textSize="15dp"
            android:layout_marginTop="10dp">


        </TextView>

        <EditText
            android:id="@+id/et_deviceid"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <androidx.legacy.widget.Space
            android:layout_width="80dp"
            android:layout_height="wrap_content">

        </androidx.legacy.widget.Space>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_marginTop="10dp"
            android:text="DEVICE NICKNAME:"
            android:textSize="15dp">


        </TextView>

        <EditText
            android:id="@+id/et_devicenickname"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


        </EditText>

        <androidx.legacy.widget.Space
            android:layout_width="10dp"
            android:layout_height="match_parent"></androidx.legacy.widget.Space>

        <Button
            android:id="@+id/btn_setDeviceID"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_blue2"
            android:text="SET"
            android:textColor="#000000"
            android:textSize="8sp"
            android:typeface="normal"
            android:layout_marginTop="20dp">


        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal">

        <com.google.android.gms.maps.StreetViewPanoramaView
            android:layout_width="45dp"
            android:layout_height="match_parent">


        </com.google.android.gms.maps.StreetViewPanoramaView>


        <Button
            android:id="@+id/connect_button"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:background="@drawable/btn_blue2"
            android:text="connect"
            android:layout_marginTop="20dp"


            >

        </Button>

        <androidx.legacy.widget.Space
            android:layout_width="40dp"
            android:layout_height="match_parent">


        </androidx.legacy.widget.Space>


        <Button
            android:id="@+id/disconnect_button"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:text="disconnect"
            android:background="@drawable/btn_blue2"
            android:layout_marginTop="20dp">


        </Button>

        <Button

            android:layout_width="0dp"

            android:layout_height="0dp"

            android:text="broadcast"

            android:id="@+id/broadcast_button"/>

        <Button

            android:layout_width="0dp"

            android:layout_height="0dp"


            android:text="auto_connect_toggle"

            android:id="@+id/auto_connect_button"/>

        <Button

            android:layout_width="0dp"

            android:layout_height="0dp"


            android:text="ecg_stream"

            android:id="@+id/ecg_button"/>

        <Button

            android:layout_width="0dp"

            android:layout_height="0dp"

            android:text="acc_stream"

            android:id="@+id/acc_button"/>

        <Button

            android:layout_width="0dp"

            android:layout_height="0dp"

            android:text="ppg_stream"

            android:id="@+id/ohr_ppg_button"/>



        <Button

            android:layout_width="0dp"

            android:layout_height="0dp"


            android:text="ppi_stream"

            android:id="@+id/ohr_ppi_button"/>



        <Button

            android:layout_width="0dp"

            android:layout_height="0dp"

            android:text="scan devices"

            android:id="@+id/scan_button"/>



        <Button

            android:layout_width="0dp"

            android:layout_height="0dp"


            android:text="list exercises"

            android:id="@+id/list_exercises"/>



        <Button

            android:layout_width="0dp"

            android:layout_height="0dp"


            android:text="read exercise"

            android:id="@+id/read_exercise"/>



        <Button

            android:layout_width="0dp"

            android:layout_height="0dp"


            android:text="remove exercise"

            android:id="@+id/remove_exercise"/>



        <Button
            android:layout_width="0dp"

            android:layout_height="0dp"


            android:text="Start H10 recording"

            android:id="@+id/start_h10_recording"/>

        <TextView
            android:layout_width="0dp"

            android:layout_height="0dp"
            android:id="@+id/text"
            android:textSize="10dp">


        </TextView>


        <Button
            android:layout_width="0dp"

            android:layout_height="0dp"

            android:text="Stop H10 recording"

            android:id="@+id/stop_h10_recording"/>



        <Button
            android:layout_width="0dp"

            android:layout_height="0dp"

            android:text="H10 recording status"

            android:id="@+id/h10_recording_status"/>



        <Button

            android:layout_width="0dp"

            android:layout_height="0dp"

            android:text="Set time"

            android:id="@+id/set_time"/>


    </LinearLayout>
</LinearLayout>